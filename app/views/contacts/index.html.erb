<h3>Listing Contacts</h3>

<br/>
<div class="table-responsive">          
  <table class="table" border="1">
    <thead>
           <tr>
           	   <th> </th>
           	   <th>Name</th>
           	   <th>AGE</th>
           	   <th>Email</th>
           	   <th>Mobile No</th>
           	   <th>Occupation</th>
           	   <th>Action</th>
           </tr>
      </thead>

      <tbody>
      	   <% @contacts.each_with_index do |contact,index| %>
                   <tr>
                        <td><%= index + 1 %></td>
                        <td><%= contact.name %></td>
                        <td><%= contact.age %></td>
                        <td><%= contact.email %></td>
                        <td><%= contact.mobile_no %></td>
                        <td><%= contact.occupation%></td>
                        <td><%= link_to "Show", contact_path(contact.id) %> |
                        <% if can? :update, contact %>
          	    	        <%= link_to "Edit", edit_contact_path(contact.id) %>
          	    	      <% end %>|
          	    	      <% if can? :destroy, contact %>
          	    	        <%= link_to "Delete", contact_path(contact.id), method: :delete, data: {confirm: "Are you sure?"} %>
          	    	      <% end %></td>  
                   </tr>
      	   <% end %>
      </tbody>
</table>
</div>
<br/>


<%= link_to "Add Contact", new_contact_path %><br/><br/>